---
import ProjectCard from '../components/ProjectCard.astro';
import ProjectTopKeyWords from './ProjectTopKeyWords.astro';
import { latestProjects, otherBrainflightProjects } from '../data/projects';

interface Props {
  showOnlyLatest?: boolean;
}

const { showOnlyLatest = true } = Astro.props;
---

<div class="mb-16">
  <ProjectTopKeyWords />
  <h3 class="mb-4 text-xl text-slate-500">Latest assignments</h3>
  <ul class="grid grid-cols-1 gap-8 lg:grid-cols-2">
    {
      latestProjects.map((project) => (
        <li>
          <ProjectCard project={project} />
        </li>
      ))
    }
  </ul>
</div>
<div class=`${showOnlyLatest && 'hidden'}`>
  <h3 class="mb-4 text-xl text-slate-500">Previous Brainflight assignments</h3>
  <ul class="grid grid-cols-1 gap-8 lg:grid-cols-2">
    {
      otherBrainflightProjects.map((project) => (
        <li>
          <ProjectCard project={project} />
        </li>
      ))
    }
  </ul>
</div>
